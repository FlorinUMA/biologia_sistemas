	author = {Mirzaa, Ghayda M. and Conway, Robert L. and Gripp, Karen W. and Lerman-Sagie, Tally and Siegel, Dawn H. and deVries, Linda S. and Lev, Dorit and Kramer, Nancy and Hopkins, Elizabeth and Graham Jr, John M. and Dobyns, William B.},
	year = {2012},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/ajmg.a.34402},
	keywords = {capillary malformation, cerebellar tonsillar ectopia, connective tissue dysplasia, hydrocephalus, mega corpus callosum, megalencephaly, polydactyly, polymicrogyria, syndactyly, ventriculomegaly},
	pages = {269--291},
