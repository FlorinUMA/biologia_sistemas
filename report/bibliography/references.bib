	pmid = {28658095},
	pmcid = {PMC5500017},
	pages = {e6814},
	file = {PubMed Central Full Text PDF:C\:\\Users\\Florin\\Zotero\\storage\\6K8TSWC4\\Pavone et al. - 2017 - A clinical review on megalencephaly.pdf:application/pdf},
