	pmid = {9290626},
	keywords = {Achievement, Adolescent, Arm, Brain, Brain Diseases, Case-Control Studies, Child, Child Behavior Disorders, Child Development, Child Language, Cross-Sectional Studies, Developmental Disabilities, Female, Follow-Up Studies, Humans, Hydrocephalus, Language Development, Male, Motor Skills, Multivariate Analysis, Neurologic Examination, Psychomotor Performance, Reaction Time, Running},
